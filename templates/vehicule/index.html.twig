{% extends 'base.html.twig' %}

{% block title %}Vehicule index{% endblock %}

{% block body %}

<div class="text-center my-5">
    <h1 class="my-4">Gestion des véhicules </h1>
    <div class="alert alert-info">Vous trouverez ci-dessous le tableau contenant l'ensemble des véhicules</div>

    {% for message in app.flashes('success') %}
    <div class="col-md-5 mx-auto alert alert-success text-center">
        {{ message }}
    </div>
    {% endfor %}

<a href="{{path('app_vehicule_new')}}" class="btn btn-dark mt-3">Ajouter un véhicule</a>

</div>
<table class="table table-bordered table-striped table-hover text-center">

    <thead class="table-dark">
        <tr>
        <th>Id</th>
        <th>Titre</th>
        <th>Marque</th>
        <th>Modele</th>
        <th>Description</th>
        <th>Photo</th>
        <th>Prix journalier</th>
        <th>Date d'enregistrement</th>
        <th>Voir</th>
        <th>Editer</th>
        <th>Supprimer</th>
        </tr>
    </thead>

    <tbody>
        {% for vehicule in vehicules %}
        <tr>
            <td>{{ vehicule.id }}</td>
            <td>{{ vehicule.titre }}</td>
            <td>{{ vehicule.marque }}</td>
            <td>{{ vehicule.modele }}</td>
            <td>{{ vehicule.description }}</td>
            <td>{{ vehicule.photo }}</td>
            <td>{{ vehicule.prixJournalier }}</td>
            <td>{{ vehicule.dateEnregistrement ? vehicule.dateEnregistrement|date('Y-m-d H:i:s') : '' }}</td>
            <td><a href="{{path('app_vehicule_show', {"id": vehicule.id}) }}" class="btn btn-info"><i class="fa-solid fa-eye"></i></a></td>
            <td><a href="{{path('app_vehicule_edit', {"id": vehicule.id})}}" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></a></td>
            <td><a href="{{path('app_vehicule_delete', {"id": vehicule.id})}}" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a></td>
        </tr>
        {% endfor %}
    </tbody>

</table>

<a href="{{path('app_admin')}}" class="btn btn-dark mt-3">Retour au backoffice</a>
{% endblock %} 